@page "/master/area/edit/{id}"
@page "/master/area/add/"

@inherits AreaEditBase

<EditForm Model="@Area" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>@PageHeaderText</h3>
    <hr />
    <div class="form-group row">
        <label for="codeArea" class="col-sm-2 col-form-label">Code Area</label>
        <div class="col-sm-10">
            <InputText id="codeArea" class="form-control" placeholder="Code Area"
                       @bind-Value="Area.CodeArea" />
            <ValidationMessage For="@(() => Area.CodeArea)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="nameArea" class="col-sm-2 col-form-label">Name Area</label>
        <div class="col-sm-10">
            <InputText id="nameArea" class="form-control" placeholder="Name Area"
                       @bind-Value="Area.NameArea" />
            <ValidationMessage For="@(() => Area.NameArea)" />
        </div>
    </div>

    @if (@Area.Id > 0)
    {
        <a href="/master/area" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" @onclick="Delete_Click">Delete</button>
    }
    else
    {
        <a href="/master/area" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-success">Save</button>
    }

</EditForm>